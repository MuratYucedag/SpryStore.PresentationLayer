@model Contact
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni İletişim Sayfası Mesajı Gönderme</h1>

<form method="post">
    <label>Adınız Soyadınız</label>
    <input type="text" class="form-control" asp-for="NameSurname" />
    <span asp-validation-for="NameSurname" class="text-danger"></span>
    <br />
    <label>Mail Adresiniz</label>
    <input type="email" class="form-control" asp-for="Mail" />
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <span asp-validation-for="Subject" class="text-danger"></span>
    <br />
    <label>Mesajınız</label>
    <textarea class="form-control" asp-for="MessageContent" rows="5"></textarea>
    <span asp-validation-for="MessageContent" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Mesajı Gönder</button>
</form>